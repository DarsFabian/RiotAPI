{
  "compilerOptions": {

    "outDir": "lib",
    "rootDir": "src",

    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES5",

    "declaration": true,
    "removeComments": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "src/**/*"
  ]
}